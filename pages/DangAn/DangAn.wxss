.pet-info-section {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}
.pet-avatar image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
.pet-basic-info {
  margin-left: 20rpx;
}
.nickname {
  font-size: 36rpx;
  font-weight: bold;
}
.age {
  font-size: 28rpx;
  color: #666;
}

.health-record-section, .collection-section, .setting-section {
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}
.health-record-list, .collection-list {
  margin-bottom: 10rpx;
}
.collection-item {
  padding: 10rpx;
  border: 1rpx solid #ddd;
  margin-bottom: 10rpx;
}
.mask {
  opacity: 0.5;
  background-color: #f0f0f0;
}
button {
  margin-top: 10rpx;
  padding: 10rpx 20rpx;
}

.notification-switch {
  display: flex;
  align-items: center;
  justify-content: space-between;
}